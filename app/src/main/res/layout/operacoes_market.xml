<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.OperacoesActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif"
        android:text="Deletar Produtos"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="331dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif"
        android:text="Alterar produto"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="331dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif"
        android:text="Listar Produtos"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="224dp" />

    <ScrollView
        android:id="@+id/imdmarket"
        android:layout_width="414dp"
        android:layout_height="90dp"
        android:background="#FF5722"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="86dp"
        android:text="IMDMARKET"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="223dp"
        android:layout_height="40dp"
        android:text="O que deseja fazer ?"
        android:textColor="#C0000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="139dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif"
        android:text="Cadastrar produto"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="224dp" />
</androidx.constraintlayout.widget.ConstraintLayout>